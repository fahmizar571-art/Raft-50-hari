--====================================
-- 50 DAYS ON A RAFT | PRO SCRIPT
-- FPS OPTIMIZED | ALL IN ONE
--====================================

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LP = Players.LocalPlayer

pcall(function()
    settings().Rendering.QualityLevel = Enum.QualityLevel.Level01
end)

--================ SETTINGS ================
local CFG = {
    ESP_ITEM = false,
    ESP_PLAYER = false,
    ESP_ENEMY = false,
    AUTO_FISH = false,
    AUTO_BRING = false
}

local ESP_CACHE = {}

--================ ESP CORE ================
local function ClearESP()
    for _,v in pairs(ESP_CACHE) do
        if v then v:Destroy() end
    end
    table.clear(ESP_CACHE)
end

local function ESP(part,color)
    local box = Instance.new("BoxHandleAdornment")
    box.Adornee = part
    box.Size = part.Size
    box.AlwaysOnTop = true
    box.Transparency = 0.5
    box.Color3 = color
    box.Parent = part
    table.insert(ESP_CACHE, box)
end

--================ ESP FUNCTIONS ================
local function ItemESP()
    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("BasePart") then
            local n = v.Name:lower()
            if n:find("wood") or n:find("iron") or n:find("food") then
                ESP(v,Color3.fromRGB(0,255,0))
            end
        end
    end
end

local function PlayerESP()
    for _,p in pairs(Players:GetPlayers()) do
        if p ~= LP and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
            ESP(p.Character.HumanoidRootPart,Color3.fromRGB(0,150,255))
        end
    end
end

local function EnemyESP()
    for _,m in pairs(workspace:GetDescendants()) do
        if m:IsA("Model") and m.Name:lower():find("enemy") then
            local hrp = m:FindFirstChild("HumanoidRootPart")
            if hrp then
                ESP(hrp,Color3.fromRGB(255,0,0))
            end
        end
    end
end

