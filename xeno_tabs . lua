-- 50 Days on a Raft | XENO | LIGHT ESP VERSION

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LP = Players.LocalPlayer
repeat task.wait() until LP.Character
local PG = LP:WaitForChild("PlayerGui")

--------------------------------------------------
-- GUI
--------------------------------------------------
local gui = Instance.new("ScreenGui", PG)
gui.ResetOnSpawn = false
gui.Name = "RaftLightESP"

local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0,240,0,260)
main.Position = UDim2.new(0.05,0,0.3,0)
main.BackgroundColor3 = Color3.fromRGB(25,25,25)
main.Active, main.Draggable = true, true

local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1,0,0,30)
title.Text = "RAFT | LIGHT ESP"
title.TextColor3 = Color3.new(1,1,1)
title.BackgroundTransparency = 1
title.TextScaled = true

--------------------------------------------------
-- STATE
--------------------------------------------------
local ESP = {
    Wood = false,
    Iron = false,
    Food = false,
    Drink = false
}

local ESPObjects = {}

--------------------------------------------------
-- BUTTON
--------------------------------------------------
local function Btn(text, y, cb)
    local b = Instance.new("TextButton", main)
    b.Size = UDim2.new(0.9,0,0,32)
    b.Position = UDim2.new(0.05,0,0,y)
    b.Text = text
    b.BackgroundColor3 = Color3.fromRGB(45,45,45)
    b.TextColor3 = Color3.new(1,1,1)
    b.MouseButton1Click:Connect(cb)
end

--------------------------------------------------
-- ESP MENU
--------------------------------------------------
Btn("üå≤ ESP KAYU", 40, function() ESP.Wood = not ESP.Wood end)
Btn("‚õì ESP BESI", 75, function() ESP.Iron = not ESP.Iron end)
Btn("üçñ ESP MAKANAN", 110, function() ESP.Food = not ESP.Food end)
Btn("üíß ESP MINUMAN", 145, function() ESP.Drink = not ESP.Drink end)
Btn("‚ùå CLOSE", 190, function() gui:Destroy() end)

--------------------------------------------------
-- ESP FUNCTION (RINGAN)
--------------------------------------------------
local function addESP(obj, color)
    if ESPObjects[obj] then return end
    local h = Instance.new("Highlight")
    h.FillColor = color
    h.OutlineTransparency = 1
    h.Parent = obj
    ESPObjects[obj] = h
end

local function clearESP()
    for _,h in pairs(ESPObjects) do
        if h then h:Destroy() end
    end
    table.clear(ESPObjects)
end

--------------------------------------------------
-- SCAN LOOP (LOW CPU)
--------------------------------------------------
task.spawn(function()
    while task.wait(2) do
        clearESP()

        for _,v in ipairs(workspace:GetDescendants()) do
            if v:IsA("BasePart") then
                local n = v.Name:lower()

                if ESP.Wood and (n:find("wood") or n:find("log")) then
                    addESP(v, Color3.fromRGB(0,255,0))
                elseif ESP.Iron and (n:find("iron") or n:find("scrap") or n:find("metal")) then
                    addESP(v, Color3.fromRGB(180,180,180))
                elseif ESP.Food and (n:find("food") or n:find("meat") or n:find("fish")) then
                    addESP(v, Color3.fromRGB(255,120,0))
                elseif ESP.Drink and (n:find("water") or n:find("drink")) then
                    addESP(v, Color3.fromRGB(0,170,255))
                end
            end
        end
    end
end)

warn("‚úÖ LIGHT ESP LOADED")
