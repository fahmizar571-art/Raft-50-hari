-- STATE
--------------------------------------------------
local ESP = {Wood=false,Iron=false,Food=false,Player=false,Bandit=false}
local AutoFish=false
local AutoGrab=false
local ESPCache={}

--------------------------------------------------
-- ESP BUTTONS
