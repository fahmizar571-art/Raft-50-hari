--------------------------------------------------
-- TP MENU
--------------------------------------------------
Btn(tabs.TP,"üè† TP Base / Raft",10,function()
    for _,v in pairs(workspace:GetDescendants()) do
        if v:IsA("BasePart") and v.Name:lower():find("raft") then
            LP.Character.HumanoidRootPart.CFrame = v.CFrame + Vector3.new(0,5,0)
            break
        end
    end
end)

Btn(tabs.TP,"üßë‚Äçü§ù‚Äçüßë TP Player",50,function()
    for _,p in pairs(Players:GetPlayers()) do
        if p~=LP and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
            LP.Character.HumanoidRootPart.CFrame =
            p.Character.HumanoidRootPart.CFrame + Vector3.new(0,3,0)
            break
        end
    end
end)

--------------------------------------------------
-- ESP SYSTEM (RINGAN)
--------------------------------------------------
local function addESP(obj,color)
    if ESPCache[obj] then return end
    local h=Instance.new("Highlight",obj)
    h.FillColor=color
    h.OutlineTransparency=1
    ESPCache[obj]=h
end

local function clearESP()
    for _,v in pairs(ESPCache) do if v then v:Destroy() end end
    table.clear(ESPCache)
end

