-- 50 DAYS ON A RAFT | LIGHT MENU SCRIPT

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local LP = Players.LocalPlayer
repeat task.wait() until LP.Character
local PG = LP:WaitForChild("PlayerGui")

--------------------------------------------------
-- GUI BASE
--------------------------------------------------
local gui = Instance.new("ScreenGui", PG)
gui.ResetOnSpawn = false
gui.Name = "RaftMenu"

local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0,260,0,300)
main.Position = UDim2.new(0.05,0,0.3,0)
main.BackgroundColor3 = Color3.fromRGB(25,25,25)
main.Active, main.Draggable = true, true

local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1,0,0,30)
title.Text = "50 Days on a Raft"
title.TextScaled = true
title.TextColor3 = Color3.new(1,1,1)
title.BackgroundTransparency = 1

--------------------------------------------------
-- TAB SYSTEM
--------------------------------------------------
local tabs = {}
local function NewTab(name, x)
    local b = Instance.new("TextButton", main)
    b.Size = UDim2.new(0,80,0,24)
    b.Position = UDim2.new(0,x,0,35)
    b.Text = name
    b.BackgroundColor3 = Color3.fromRGB(45,45,45)
    b.TextColor3 = Color3.new(1,1,1)

    local f = Instance.new("Frame", main)
    f.Size = UDim2.new(1,0,1,-65)
    f.Position = UDim2.new(0,0,0,65)
    f.Visible = false
    f.BackgroundTransparency = 1

    tabs[name] = f
    b.MouseButton1Click:Connect(function()
        for _,v in pairs(tabs) do v.Visible = false end
        f.Visible = true
    end)
end

NewTab("ESP",0)
NewTab("AUTO",85)
NewTab("TP",170)
tabs.ESP.Visible = true

--------------------------------------------------
-- BUTTON
--------------------------------------------------
local function Btn(p,text,y,cb)
    local b = Instance.new("TextButton", p)
    b.Size = UDim2.new(0.9,0,0,30)
    b.Position = UDim2.new(0.05,0,0,y)
    b.Text = text
    b.BackgroundColor3 = Color3.fromRGB(50,50,50)
    b.TextColor3 = Color3.new(1,1,1)
    b.MouseButton1Click:Connect(cb)
end

